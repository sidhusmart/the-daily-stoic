{
    "manifest_version": 3,
    "name": "Stoic Start",
    "description": "Replaces your new tab with a calming Stoic quote to start your day with clarity.",
    "version": "1.0",
    "chrome_url_overrides": {
      "newtab": "newtab.html"
    },
    "permissions": [],
    "web_accessible_resources": [
      {
        "resources": ["stoic_quotes.json"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_title": "Daily Stoic"
    },
    "icons": {
      "16": "icons/stoic_start_icon16.png",
      "48": "icons/stoic_start_icon48.png",
      "128": "icons/stoic_start_icon128.png",
      "256": "icons/stoic_start_icon256.png"
    }
  }